type Задача = {
    идентификатор: number;
    заголовок: string;
    завершена: boolean;
}

type СписокЗадач = {
    задачи: Задача[];
    добавитьЗадачу: (заголовок: string) => void;
    переключитьЗадачу: (идентификатор: number) => void;
    удалитьЗадачу: (идентификатор: number) => void;
}

const списокЗадач: СписокЗадач = {
    задачи: [],
    добавитьЗадачу: function(заголовок: string) {
        const новаяЗадача: Задача = {
            идентификатор: this.задачи.length + 1,
            заголовок,
            завершена: false
        };
        this.задачи.push(новаяЗадача);
    },
    переключитьЗадачу: function(идентификатор: number) {
        this.задачи = this.задачи.map(задача =>
            задача.идентификатор === идентификатор ? { ...задача, завершена: !задача.завершена } : задача
        );
    },
    удалитьЗадачу: function(идентификатор: number) {
        this.задачи = this.задачи.filter(задача => задача.идентификатор !== идентификатор);
    }
};

// Пример использования
списокЗадач.добавитьЗадачу("Изучить TypeScript");
списокЗадач.добавитьЗадачу("Попрактиковаться в программировании");
списокЗадач.переключитьЗадачу(1);
списокЗадач.удалитьЗадачу(2);

console.log(списокЗадач.задачи);